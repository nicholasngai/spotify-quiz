{
  "name": "react-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:server": "go build -o ./build/dist/server ./cmd/server",
    "build:client": "tsc -b client/tsconfig.json && vite build client",
    "build": "yarn build:server && yarn build:client",
    "start": "cd build/dist && ./server",
    "dev:server": "nodemon -e go --signal SIGTERM -x \"go run ./cmd/server\"",
    "dev:client": "concurrently --names tsc,vite \"tsc -b -w --preserveWatchOutput client/tsconfig.json\" \"vite --clearScreen false client\"",
    "dev": "concurrently --names server,client \"yarn dev:server\" \"yarn dev:client\"",
    "lint:server": "go tool github.com/golangci/golangci-lint/cmd/golangci-lint run",
    "lint:client": "eslint",
    "lint": "yarn lint:server && yarn lint:client",
    "clean": "rimraf build"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  }
}
